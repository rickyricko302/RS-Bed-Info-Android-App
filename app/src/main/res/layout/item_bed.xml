<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:cardCornerRadius="10dp"
                                                   app:cardUseCompatPadding="true"
                                                   app:cardElevation="4dp"
                                                   android:id="@+id/bedmycard"
                                                   android:theme="@style/Theme.MaterialComponents.Light"
                                                   android:layout_marginTop="8dp"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:background="?attr/selectableItemBackground">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/bedItemRecycler">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@color/red_btn_bg_pressed_color"
                      android:padding="5dp"
                      android:orientation="vertical"
                      android:id="@+id/linItemBed"
        >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="1. RS Umum Kasih Ibu"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:gravity="center_vertical"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Jl. Teuku Umar 120, Denpasar"
                      android:textColor="@color/white"
                      android:textSize="15sp"
                      />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_below="@+id/linItemBed"
                      android:layout_marginBottom="8dp"

                      android:orientation="horizontal">
            <Button android:layout_width="wrap_content" android:layout_height="100dp"
                    android:text="Call RS"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:background="@color/main_orange_color"
                    android:drawableLeft="@drawable/ic_call_white_18dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:text="Open Maps"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/material_blue_grey_80"
                    android:drawableLeft="@drawable/ic_location_on_white_24dp"/>
            <Button android:layout_width="match_parent" android:layout_height="fill_parent"
                    android:text="Detail RS"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_navigate_next_white_24dp"/>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>